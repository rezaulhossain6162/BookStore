<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvAddressDisplay"
        android:layout_width="236dp"
        android:layout_height="25dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="42dp"
        android:textSize="12dp"
        android:textColor="#000"
        app:layout_constraintHorizontal_bias="0.384"
        app:layout_constraintLeft_toRightOf="@+id/tvName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivbook"
        android:layout_marginStart="8dp" />

    <ImageView
        android:id="@+id/ivbook"
        android:layout_width="358dp"
        android:layout_height="136dp"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/book_image"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnMail" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="90dp"
        android:layout_height="24dp"
        android:layout_marginLeft="16dp"
        android:text="Name of Books :"
        android:textColor="#000"
        android:textSize="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/ivbook"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/tvNameDisplay"
        android:layout_width="239dp"
        android:textColor="#000"
        android:layout_height="25dp"
        android:textSize="12dp"
        android:layout_marginStart="8dp"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/ivbook"
        app:layout_constraintLeft_toRightOf="@+id/tvName"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.304" />

    <TextView
        android:id="@+id/tvAddress"
        android:layout_width="90dp"
        android:layout_height="24dp"
        android:textColor="#000"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="Writter Name  :"
        android:textSize="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvName"
        android:layout_marginStart="16dp" />

    <Button
        android:id="@+id/btnMail"
        android:layout_width="356dp"
        android:layout_height="45dp"
        android:text="View PDF"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <View
        android:id="@+id/viewline"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@android:color/black"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/checkBox" />



    <TextView
        android:id="@+id/tvOnFavourate"
        android:layout_width="80dp"
        android:layout_height="36dp"
        android:text="On Favourite: "
        android:textColor="#000"
        android:layout_marginLeft="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="46dp"
        android:textSize="12dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/tvAddress" />

    <Button
        android:id="@+id/btnDownload"
        android:layout_width="156dp"
        android:layout_height="70dp"
        android:background="#FAFAFA"
        android:drawableTop="@drawable/download1"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tvAddressDisplay"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/checkBox"
        android:layout_marginLeft="8dp" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="70dp"
        android:layout_height="63dp"
        android:button="@drawable/favourite"
        app:layout_constraintLeft_toRightOf="@+id/tvOnFavourate"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@+id/tvAddressDisplay" />


</android.support.constraint.ConstraintLayout>