<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/border"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="6"
        android:layout_height="122dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_height="120dp">
            <TextView
                android:id="@+id/tvNameB"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:text="Book Name   :"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvWritterNameB"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:text="Writter name:"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvNameB" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:weightSum="4"
            android:layout_height="120dp">
            <TextView
                android:id="@+id/tvViewBname"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toEndOf="@+id/tvNameB"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvViewWName"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toEndOf="@+id/tvWritterNameB"
                app:layout_constraintTop_toBottomOf="@+id/tvViewBname" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:weightSum="1">

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/delete"
                android:textSize="10sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>